{
  "name": "hello-spectator",
  "productName": "HELLO",
  "version": "1.0.0",
  "description": "Application for monitoring students behaviour at the PC",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "jest",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
     "lint:security": "eslint src/ --config eslint.config.js"
  },
  "repository": "https://github.com/AhmedLyanov/HELLO_Spectator",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.ahmedlyanov.hellospectator",
    "productName": "HELLO",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "icon": "./src/assets/logo/logo.png",
      "target": "nsis",
      "signAndEditExecutable": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "build/license.txt"
    }
  },
  "keywords": [
    "demonstration, client, spectator"
  ],
  "author": {
    "name": "Ahmed",
    "login": "DevAhmed",
    "email": "amoshal1997@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.36.0",
    "babel-jest": "^30.1.1",
    "electron": "36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-scanjs-rules": "^0.2.1",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.1.1"
  }
}
